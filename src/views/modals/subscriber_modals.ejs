<!-- modal of add subscriber -->
<div class="modal fade" id="addSubscriber" tabindex="-1" role="dialog" aria-labelledby="SubscriberAddTitle" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="SubscriberAddTitle">新增訂閱者</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
				</button>
			</div>
			<form action="/add_subscriber" method="post">
				<div class="modal-body">
					<div class="form-group mb-3">
						<label for="name" class="col-form-label">新訂閱者:</label>
						<input type="text" id="name" class="form-control" placeholder="訂閱者ID" required>
					</div>
					<div class="form-group mb-3">
						<label for="preview_url" class="col-form-label">預覽網址:</label>
						<textarea class="form-control" placeholder="可輸入多行，非必填" name="previewURL" id="preview_url" rows="5"></textarea>
					</div>
					<div class="form-group mb-3">
						<label for="download_url" class="col-form-label">下載網址:</label>
						<textarea class="form-control" placeholder="可輸入多行" name="downloadURL" id="download_url" rows="5" required></textarea>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
					<button type="submit" class="btn btn-primary">新增</button>
				</div>
			</form>
		</div>
	</div>
</div>
<!-- end of modal -->

