<table
    data-classes="table align-middle table-bordered"
    data-toggle="table"
    data-search="true"
    data-height="700"
    data-show-search-button="true"
    data-search-align="left"
    data-show-search-clear-button="true"
    data-virtual-scroll="true"
    data-sort-reset="true"
    id="overview-table">
    <thead class="table-dark">
        <tr>
            <th data-field="artist" data-sortable="true">繪師</th>
            <th data-field="mark">備註</th>
            <th data-field="updateTime" data-sortable="true">上次更新</th>
            <th data-field="status" data-sortable="true">更新狀態</th>
            <th data-field="subscriber" data-sortable="true">訂閱者</th>
            <th data-field="preview_url" class="text-center">預覽</th>
            <th data-field="download_url" class="text-center">下載</th>
        </tr>
    </thead>
    <tbody class="">
        <% data.subscribers.forEach(subscriber=> { %>
            <% const artists=data.artists.filter(d=> d.subscriber === subscriber.id) %>
            <% if(artists.length !=0 ){ %>
                <% artists.forEach((artist, index)=> { %>
                    <tr>
                        <td>
                            <%- artist['artist'] %>
                        </td>
                        <td>
                            <%- artist['mark'] %>
                        </td>
                        <td>
                            <%- artist['lastUpdateTime'].slice(0,10) %>
                        </td>
                        <td>
                            <%- artist['status'] %>
                        </td>
                        <td>
                            <%- subscriber.name %>
                        </td>
                        <% if(status > 0) { %>
                            <td class="text-center">
                                <% const preview_url=subscriber['preview_url'] %>
                                <% if (preview_url !='無' ) { %>
                                    <a data-bs-toggle="modal"
                                        data-bs-target="#modal-URL" data-bs-type="預覽"
                                        data-bs-artist=<%-artist['artist'] %>
                                        data-bs-url="<%- subscriber['preview_url'] %>">
                                        <i class="fas fa-search fa-lg" style="color: cornflowerblue;"></i>
                                    </a>
                                <% } else { %>
                                    <i class="fas fa-times-circle fa-lg" style="color: gray;"></i>
                                <% } %>
                            </td>
                            <td>
                                <a data-bs-toggle="modal"
                                    data-bs-target="#modal-URL" data-bs-type="下載"
                                    data-bs-artist=<%-artist['artist'] %>
                                    data-bs-url="<%- subscriber['download_url'] %>">
                                    <i class="fas fa-cloud-download-alt fa-lg" style="color: cornflowerblue;"></i>
                                </a>
                            </td>
                        <% } else { %>
                            <td><i class="fas fa-times-circle fa-lg" style="color: gray;"></i></td>
                            <td><i class="fas fa-times-circle fa-lg" style="color: gray;"></i></td>
                        <% } %>
                    </tr>
                <% }) %>
            <% } %>
        <% }) %>
    </tbody>
</table>